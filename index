  <div class="slide">
    <h1>ğŸ‰ Your Turn! ğŸ‰</h1>
    <p id="revealText" class="letter-reveal"></p>
    <button class="btn" onclick="revealMessage()">Reveal Message</button>
    <button class="btn" onclick="restartSlide()">Start Again</button>
  </div>

  <script>
    let current = 0;
    const slides = document.querySelectorAll('.slide');

    function nextSlide() {
      slides[current].classList.remove('active');
      current = (current + 1) % slides.length;
      slides[current].classList.add('active');
    }

    function restartSlide() {
      slides[current].classList.remove('active');
      current = 0;
      slides[current].classList.add('active');
      document.getElementById("revealText").innerText = "";
    }

    function revealMessage() {
      const text = "If you liked the story, don't forget to give your epic reaction to Prasann ğŸ˜ğŸ’¬";
      const output = document.getElementById("revealText");
      output.innerText = "";
      let i = 0;
      const interval = setInterval(() => {
        output.innerText += text.charAt(i);
        i++;
        if (i >= text.length) clearInterval(interval);
      }, 50);
    }
  </script>

